def choosen_category(categorymembers, i=0, n=0):
    example = "абвгдеёжзийклмнопрстуфхцчшщъыьэюя"

    for c in categorymembers.values():
        if example[i].upper() == c.title[0]:
            n += 1

        elif re.match(r"\bA[A-Za-z]\w*", c.title):
            print(example[i].upper() + ":", n)
            i += 1

            if i == len(example):
                break
            else:
                return choosen_category(categorymembers, i)

        else:
            continue


animals = site.page("Категория:Животные_по_алфавиту")
print("Животные_по_алфавиту")
choosen_category(animals.categorymembers)
